@model TodoItem
@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-dark">Add new Task</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Date"></label>
            <input asp-for="Date" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Priority"></label>
            <select asp-for="Priority" class="form-select" aria-label="Priority">
                <option selected>Select a priority</option>
                <option value="high">High</option>
                <option value="medium">Medium</option>
                <option value="low">Low</option>
            </select>
        </div>
        <div class="mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="isDone">
                <label class="form-check-label" asp-for="isDone">Done</label>
            </div>
        </div>
        <button type="submit" class="btn btn-dark" style="width:150px">
            Add
        </button>
        <a asp-controller="TodoItem" asp-action="Index" class="btn btn-danger" style="width:150px">
            Back to List
        </a>
    </div>
</form>