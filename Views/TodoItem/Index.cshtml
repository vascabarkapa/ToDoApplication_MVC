@model IEnumerable<TodoItem>
@{
    ViewData["Title"] = "To Do Items";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-dark">To Do List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="TodoItem" asp-action="Create" class="btn btn-dark">
                Add Task
            </a>
        </div>
    </div>
</div>
<br />
<table class="table table-bordered table-striped" width="100%">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            <th>
                Date
            </th>
            <th>
                Priority
            </th>
            <th>
                Done
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="20%">
                    @obj.Title
                </td>
                <td width="20%">
                    @obj.Description
                </td>
                <td width="20%">
                    @obj.Date
                </td>
                <td width="20%">
                    @obj.Priority
                </td>
                <td width="20%">
                    @obj.isDone
                </td>
            </tr>
        }
    </tbody>
</table>

