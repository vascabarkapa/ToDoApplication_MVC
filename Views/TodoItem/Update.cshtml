@model TodoItem
@{
    ViewData["Title"] = "Update Task";
}

<form method="post" asp-action="Update">
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-dark">Update Task</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DateAndTime"></label>
            <input asp-for="DateAndTime" class="form-control" />
            <span asp-validation-for="DateAndTime" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Priority"></label>
            <select asp-for="Priority" class="form-select" aria-label="Priority">
                <option value="" selected>Select a priority</option>
                <option value="High">High</option>
                <option value="Medium">Medium</option>
                <option value="Low">Low</option>
            </select>
            <span asp-validation-for="Priority" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="isDone">
                <label class="form-check-label" asp-for="isDone"></label>
            </div>
        </div>
        <button type="submit" class="btn btn-dark" style="width:150px">
            Update
        </button>
        <a asp-controller="TodoItem" asp-action="Index" class="btn btn-danger" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}